<AuthorizeView>
    <Authorized>
        Hello, @context.User.Identity?.Name!
        <MudButton Color="Color.Inherit" OnClick="BeginLogout">Log out</MudButton>
    </Authorized>
    <NotAuthorized>
        <MudButton Color="Color.Inherit" Href="authentication/login">Log in</MudButton>
    </NotAuthorized>
</AuthorizeView>
